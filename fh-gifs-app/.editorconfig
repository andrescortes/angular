# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{ts,tsx,js,jsx}]
indent_style = space
indent_size = 2
quote_type = single

[*.json]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2
max_line_length = 140

[*.{css,scss,sass}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 0

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{xml,config,props,targets,nuspec,proj,projitems,ruleset,vsixmanifest,vsct}]
indent_style = space
indent_size = 2